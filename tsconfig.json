{
  "compilerOptions": {
    "target": "ES2020",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "Node16",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    "typeRoots": ["./src/typings", "./node_modules/@types"],
    "types": [],
    "declaration": true,
    "outDir": "./js/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    // "lib": ["esnext"],
  },
  "include": ["**/*.ts"]
}
